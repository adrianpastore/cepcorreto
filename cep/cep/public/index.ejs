<form class="form-inline">
        <div class="form-group">
            <label for="cep">CEP</label>
            <input type="text"
                autofocus class="form-control"
                id="cep" name="cep" pattern="[0-9]{8}" required>
        </div>
        <button type="submit"class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span>
        </button>
        <button type="reset" class="btn btn-default" onclick="limpaformcep()">
            <span class="glyphicon glyphicon-remove"></span>
        </button>
    </form>
    
    <div id="resultado"></div>
    
    <div class="alert alert-danger alert-dismissible"
        id="perigoperigo" name="perigo" style="visibility: hidden">
        <strong>CEP errado!</strong>CEP errado.
    </div>
    
    <script id="template" type="text/x-handlebars-template">
        <table class="table">
            <tbody>
                <tr>
                    <td>CEP</td>
                    <td>{{cep}}</td>
                </tr>
                <tr id="lontra">
                    <td>Logradouro</td>
                    <td id = "logradouro">{{logradouro}}</td>
                </tr>
                <tr id="localidade">
                    <td>Localidade</td>
                    <td>{{localidade}}</td>
                </tr>
            </tbody>
        </table>
    </script>
    
    <script src="js/index.js"></script>